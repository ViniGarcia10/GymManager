{% extends "layout.njk" %}

{% block content %}

  <div class="card table-container">
    <a href="/instructors/create">Novo</a>
    <table>
      <thead>
        <tr>
          <th>Instructor</th>
          <th>Atendimento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for instructor in instructors %}
          <tr>
            <td id='name-instructor'>
              <span style='background-image: url({{instructor.avatar_url}})'></span>
              {{instructor.name}}</td>
            <td>
              {% for service in instructor.services %}
                <span class='list-service-index'>{{service}}</span>
              {% endfor %}
            </td>
            <td>
              <a href="/instructors/{{instructor.id}}">Visualizar</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock content %}
