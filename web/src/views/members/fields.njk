<div class="item">
  <div>Avatar URL</div>
  <div>
    <input required="required" type="url" name="avatar_url" placeholder="http://" value="{{member.avatar_url}}"/>
  </div>
</div>

<div class="item">
  <div>Membro</div>
  <div>
    <input required="required" type="text" name="name" placeholder="Nome do Membro" value="{{member.name}}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input required="required" type="date" name="birth" value='{{member.birth}}'>
  </div>
</div>

<div class="item">
  <div>Sexo</div>
  <div>
    <span>
      <input type="radio" name="gender" value="M" {% if member.gender == "M"%} checked="checked" {% endif %}>
      Masculino
    </span>
    <span>
      <input type="radio" name="gender" value="F" {% if member.gender == "F"%} checked="checked" {% endif %}>
      Femenino
    </span>
  </div>

  <div class="item">
    <div>Email</div>
    <div>
      <input required="required" type="email" name="email" value='{{member.email}}'>
    </div>
  </div>

  <div class="item">
    <div>Tipo Sanguineo</div>
    <div>
      <select name="blood">
        <option value="A1" {% if member.blood == "A1" %} selected="selected" {% endif %}>A+</option>
        <option value="A0" {% if member.blood == "A0" %} selected="selected" {% endif %}>A+</option>
        <option value="B1" {% if member.blood == "B1" %} selected="selected" {% endif %}>B+</option>
        <option value="B0" {% if member.blood == "B0" %} selected="selected" {% endif %}>B-</option>
        <option value="AB1" {% if member.blood == "AB1" %} selected="selected" {% endif %}>AB+</option>
        <option value="AB0" {% if member.blood == "AB0" %} selected="selected" {% endif %}>AB-</option>
        <option value="O1" {% if member.blood == "O1" %} selected="selected" {% endif %}>O+</option>
        <option value="O0" {% if member.blood == "O0" %} selected="selected" {% endif %}>O-</option>
      </select>
    </div>
  </div>

  <div class="item">
    <div>Peso (kg)</div>
    <div>
      <input required="required" type="number" name="weight" value='{{member.weight}}'>
    </div>
  </div>

  <div class="item">
    <div>Altura (cm)</div>
    <div>
      <input required="required" type="number" name="height" value='{{member.height}}'>
    </div>
  </div>
</div>
