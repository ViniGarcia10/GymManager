{% extends "layout.njk" %}

{% block content %}

  <form class="card" method="POST" action="/members">

    <section class="avatar"></section>

    <section class="details">
      <h3>Novo Membro</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input required="required" type="url" name="avatar_url" placeholder="http://"/>
        </div>
      </div>

      <div class="item">
        <div>Nome</div>
        <div>
          <input required="required" type="text" name="name">
        </div>
      </div>

      <div class="item">
        <div>Email</div>
        <div>
          <input required="required" type="email" name="email">
        </div>
      </div>

      <div class="item">
        <div>Data de Nascimento</div>
        <div>
          <input required="required" type="date" name="birth">
        </div>
      </div>

      <div class="item">
        <div>Sexo</div>
        <div>
          <span><input type="radio" name="gender" value="M" checked="checked">Masculino</span>
          <span><input type="radio" name="gender" value="F">Femenino</span>
        </div>
      </div>

      <div class="item">
        <div>Tipo Sanguineo</div>
        <div>
          <select name="blood">
            <option value="A1" {% if member.blood == "A1" %} selected="selected" {% endif %}>A+</option>
            <option value="A0" {% if member.blood == "A0" %} selected="selected" {% endif %}>A+</option>
            <option value="B1" {% if member.blood == "B1" %} selected="selected" {% endif %}>B+</option>
            <option value="B0" {% if member.blood == "B0" %} selected="selected" {% endif %}>B-</option>
            <option value="AB1" {% if member.blood == "AB1" %} selected="selected" {% endif %}>AB+</option>
            <option value="AB0" {% if member.blood == "AB0" %} selected="selected" {% endif %}>AB-</option>
            <option value="O1" {% if member.blood == "O1" %} selected="selected" {% endif %}>O+</option>
            <option value="O0" {% if member.blood == "O0" %} selected="selected" {% endif %}>O-</option>
          </select>
        </div>
      </div>

      <div class="item">
        <div>Peso (kg)</div>
        <div>
          <input required="required" type="number" name="weight" value='{{member.weight}}'>
        </div>
      </div>

      <div class="item">
        <div>Altura (cm)</div>
        <div>
          <input required="required" type="number" name="height" value='{{member.height}}'>
        </div>
      </div>

      <button type="submit">Salvar</button>
    </section>

  </form>

{% endblock content %}
